<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/two_choice_dialog"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="340dp"
   >


    <ImageView
        android:id="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/body"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/body"
        android:padding="10dp"
        app:srcCompat="@drawable/x_icon_white" />

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:background="@drawable/dialog_border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img_half_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/half_sun2" />

        <TextView
            android:id="@+id/text_guName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="노원구"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_gravity="center"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_guName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="노원구"
                    android:textColor="@color/black_3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="를"
                    android:textColor="@color/black_3"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘"
                    android:textColor="@color/black_3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_desc_dialog_posneg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="님의 동네로 추가할까요?"
                    android:textColor="@color/black_3"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_yes"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/dialog_borderbottom"
        android:text="네!" />

</androidx.constraintlayout.widget.ConstraintLayout>